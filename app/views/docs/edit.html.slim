- doc = @doc

= render :partial => 'doc_navigation', :locals => { :doc => doc }

.row.mtm
	= form_for doc, :html => { :class => 'form-horizontal' } do |f|
		= render :partial => 'form', :locals => { :doc => doc, :f => f }
.row
	.tabbable
		ul.nav.nav-tabs
			li.active
				a href="#requests" data-toggle="tab" Requests
			li
				a href="#versions" data-toggle="tab" Versions
			li
				a href="#mappings" data-toggle="tab" Mapping
			li
				a href="#history" data-toggle="tab" History

	.tab-content

		#requests.tab-pane.active
			= render :partial => 'docs/tabs/doc_requests', :locals => { :doc => doc }
		#versions.tab-pane
			= render :partial => 'docs/tabs/doc_versions', :locals => { :doc => doc }

		#mappings.tab-pane
			= render :partial => 'docs/tabs/doc_mappings', :locals => { :doc => doc }

		#history.tab-pane